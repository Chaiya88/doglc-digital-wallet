# DOGLC Security Worker - Environment Variables
# Copy this file to .env and fill in actual values

# Security Configuration (Required)
INTERNAL_API_KEY=your_internal_api_key_here

# OCR & Image Processing
GOOGLE_VISION_API_KEY=your_google_vision_api_key
OCR_PROCESSING_TIMEOUT=30000
VERIFICATION_CONFIDENCE_THRESHOLD=0.7
TESSERACT_LANGUAGE=eng+tha

# Gmail Integration
GMAIL_ACCESS_TOKEN=your_gmail_access_token
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
GMAIL_PROJECT_ID=doglc-email-processor
GMAIL_WEBHOOK_SECRET=your_gmail_webhook_secret
EMAIL_PROCESSING_ENABLED=true
GMAIL_WEBHOOK_ENABLED=true

# Security & Authentication
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key
WEBHOOK_VERIFICATION_SECRET=your_webhook_secret

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
SUSPICIOUS_ACTIVITY_THRESHOLD=5
MAX_FAILED_ATTEMPTS=3
ACCOUNT_LOCK_DURATION_HOURS=24

# OCR Engine Configuration
GOOGLE_VISION_WEIGHT=1.0
TESSERACT_WEIGHT=0.8
HEURISTIC_WEIGHT=0.6
MIN_CONSENSUS_SCORE=0.6

# Image Processing
MAX_IMAGE_SIZE_MB=10
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,pdf
IMAGE_QUALITY_THRESHOLD=0.5
AUTO_IMAGE_ENHANCEMENT=true

# Verification Thresholds
AUTO_APPROVE_CONFIDENCE=0.8
MANUAL_REVIEW_CONFIDENCE=0.5
REJECT_CONFIDENCE=0.3

# Bank Email Patterns
BANK_EMAIL_DOMAINS=kasikornbank.com,scb.co.th,bangkokbank.com,krungsri.com
EMAIL_CONFIDENCE_THRESHOLD=0.6
AUTO_CONFIRM_EMAIL_MATCH=true

# Monitoring & Logging
LOG_LEVEL=INFO
SECURITY_ALERT_ENABLED=true
AUDIT_LOG_ENABLED=true
PERFORMANCE_MONITORING=true

# Rate Limiting
OCR_RATE_LIMIT_PER_MINUTE=60
WEBHOOK_RATE_LIMIT_PER_MINUTE=100
VERIFICATION_RATE_LIMIT_PER_HOUR=200

# Storage Configuration
SLIP_IMAGE_RETENTION_DAYS=90
LOG_RETENTION_DAYS=365
CACHE_TTL_SECONDS=3600

# Admin & Notifications
ADMIN_NOTIFICATION_ENABLED=true
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id
SECURITY_EMAIL=security@teenoi96.org

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=85bcd386f06541844632ecb984afa9fb
DOMAIN=teenoi96.org

# Environment
ENVIRONMENT=development
WORKER_TYPE=security
DEBUG_MODE=true